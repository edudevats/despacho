# SAT Flask Application - Environment Variables

# Security (change in production!)
SECRET_KEY=your-super-secret-key-change-this-in-production

# Encryption Key for storing sensitive data (generate with command below)
# python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
FERNET_KEY=

# Database
DATABASE_URL=sqlite:///sat_app.db

# Flask-Mail Configuration
# For Gmail, enable "Less secure apps" or use App Password
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@satapp.local
MAIL_SUPPRESS_SEND=true

# Cache Configuration
# Options: SimpleCache, RedisCache, FileSystemCache
CACHE_TYPE=SimpleCache

# For Redis Cache (production):
# CACHE_TYPE=RedisCache
# REDIS_URL=redis://localhost:6379/0

# Application Mode
FLASK_ENV=development
FLASK_DEBUG=1
